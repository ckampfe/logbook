{
    "name": "logbook",
    "displayName": "logbook",
    "description": "a daily logbook",
    "version": "0.0.5",
    "publisher": "jowitte",
    "engines": {
        "vscode": "^1.60.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ckampfe/logbook.git"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.openTodaysLogbook",
        "onCommand:extension.openLogbookDirectory"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.openTodaysLogbook",
                "title": "Open Today's Logbook",
                "category": "Logbook"
            },
            {
                "command": "extension.openLogbookDirectory",
                "title": "Open Logbook Directory",
                "category": "Logbook"
            }
        ],
        "configuration": [
            {
                "type": "object",
                "title": "Logbook configuration",
                "properties": {
                    "logbook.directory": {
                        "type": "string",
                        "description": "The absolute path of the directory where your logbook files live\nThis directory must alredy exist."
                    },
                    "logbook.openInNewWindow": {
                        "type": "boolean",
                        "description": "Should the logbook directory open in a new window.\nDefaults to true.",
                        "default": true
                    },
                    "logbook.mode": {
                        "type": "string",
                        "description": "Should the logbook rotate daily or weekly?.\nDefaults to daily.",
                        "default": "daily",
                        "enum": ["daily", "weekly"],
                        "enumDescriptions": [
                          "Creates a daily note.",
                          "Create a note per week starting on Monday."
                        ]
                      },
                      "logbook.prefix": {
                        "type": "string",
                        "description": "Prefix notebook files?",
                        "default": "Logbook "
                      }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.48",
        "@types/node": "^7.0.70",
        "@types/vscode": "^1.60.0",
        "typescript": "^3.0.0"
    }
}
